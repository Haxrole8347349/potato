-- 1. DISABLE 3D RENDERING (Screen goes black but detection still works)
pcall(function()
    game:GetService("RunService"):Set3dRenderingEnabled(false)
end)

-- 2. CAP FPS TO 5 (Drops CPU from 10% to ~1%)
pcall(function()
    setfpscap(5)
end)

-- 3. KILL ALL LIGHTING EFFECTS
pcall(function()
    local Lighting = game:GetService("Lighting")
    Lighting.GlobalShadows = false
    Lighting.FogEnd = 9e9
    Lighting.Brightness = 0
    Lighting.OutdoorAmbient = Color3.new(1, 1, 1)
    Lighting.Ambient = Color3.new(1, 1, 1)
end)

-- 4. DESTROY ALL VISUAL EFFECTS
task.spawn(function()
    pcall(function()
        for _, v in pairs(workspace:GetDescendants()) do
            if v:IsA("ParticleEmitter") or v:IsA("Trail") or v:IsA("Smoke") or 
               v:IsA("Fire") or v:IsA("Sparkles") or v:IsA("Beam") then
                v.Enabled = false
            end
            if v:IsA("BasePart") then
                v.Material = Enum.Material.SmoothPlastic
                v.Reflectance = 0
                v.CastShadow = false
            end
            if v:IsA("Decal") or v:IsA("Texture") then
                v.Transparency = 1
            end
        end
    end)
end)

-- 5. DESTROY UI ELEMENTS
task.spawn(function()
    task.wait(1)
    pcall(function()
        local CoreGui = game:GetService("CoreGui")
        if CoreGui:FindFirstChild("ChatGui") then CoreGui.ChatGui:Destroy() end
        if CoreGui:FindFirstChild("PlayerList") then CoreGui.PlayerList:Destroy() end
        if CoreGui:FindFirstChild("HealthBar") then CoreGui.HealthBar:Destroy() end
        if CoreGui:FindFirstChild("Backpack") then CoreGui.Backpack:Destroy() end
    end)
end)

-- 6. MOVE CAMERA AWAY (Nothing nearby to render)
pcall(function()
    local camera = workspace.CurrentCamera
    camera.CameraType = Enum.CameraType.Scriptable
    camera.CFrame = CFrame.new(0, 10000, 0)
end)

-- 7. REDUCE SIMULATION RADIUS
pcall(function()
    local player = game:GetService("Players").LocalPlayer
    player.MaximumSimulationRadius = 0
    player.SimulationRadius = 0
end)

print("âœ… Graphics destroyed - CPU: ~0.5-1% per instance")
